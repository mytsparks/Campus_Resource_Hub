# Copy this file to .env and fill in your actual values

# Flask
SECRET_KEY=replace-with-a-secure-random-hex
FLASK_DEBUG=False

# Database (use PostgreSQL in production; SQLite for local dev)
# SQLite connection (for local dev):
DATABASE_URL=sqlite:///site.db

# LLM Configuration
LLM_PROVIDER=gemini
LLM_MODEL=gemini-2.0-flash
# IMPORTANT: Set your Gemini API key in your local .env. Do NOT commit it.
LLM_API_KEY=your-gemini-api-key-here

# Ollama (optional)
OLLAMA_BASE_URL=http://localhost:11434

# Google Cloud Storage (for production/GCP)
# Set USE_GCS=true to use Google Cloud Storage instead of local filesystem
# USE_GCS=false
# GCS_BUCKET_NAME=your-bucket-name
# GCS_PROJECT_ID=your-project-id

